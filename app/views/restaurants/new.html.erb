<div class="container">
  <h1>Add a new restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.submit "Add a restaurant", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Back to restaurants", restaurants_path %>
</div>
